<h2>New Course</h2>

<div class="form">
<%= form_with model: @course do |f| %>
    <%= f.label(:name) %> <br>
    <%= f.text_field(:name) %> <br>
    <%= f.label("Image (URL)") %><br>
    <%= f.text_field(:image) %><br>
    <%= f.submit("Create course") %>
    <% end %>

</div>